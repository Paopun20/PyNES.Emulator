{
  "name": "NES.Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.14.0",

  "postCreateCommand": [
    "python -m pip install --upgrade pip",
    "pip install uv",
    "uv pip install --upgrade -r requirements.txt",
    "python setup.py build_ext --inplace"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}
